<% include('../Layouts/header.ejs') %>

<img src="userimages/<%= user.image %>" width="100px" height="auto" alt="">
<br><br>
<form action="" method="post" enctype="multipart/form-data">
    <input type="file" name="image">
    <br><br>
    <input type="hidden" name="user_id" value="<%= user._id %>">
    <br><br>

    <input type="text" name="name" value="<%= user.name %>" placeholder="Enter Name" required>
    <br> <br>
    <input type="email" name="email" value="<%= user.email %>" placeholder="Enter Email" required>
    <br><br>
    <input type="number" name="mobile" value="<%= user.mobile %>" placeholder="Enter Mobile" required>
    <br> <br>
    <input type="submit" value="Update Profile">
</form>

